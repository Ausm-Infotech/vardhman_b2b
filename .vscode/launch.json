  "version": "0.2.0",
  "configurations": [
    {
      "name": "Chrome",
      "request": "launch",
      "type": "dart",
      "args": [
        "-d",
        "chrome",
        "--web-port",
        "8000",
        "--web-browser-flag",
        "--ignore-certificate-errors"
        // "--disable-web-security --ignore-certificate-errors --user-data-dir=\"C:/Chrome dev session\""
      ]
    },
    {
      "name": "Web Server",
      "request": "launch",
      "type": "dart",
      "args": ["-d", "web-server", "--web-port", "8000"]
    }
  ]
}
